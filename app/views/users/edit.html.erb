<div class="container">
  <div class="row">
    <div>
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
        <div class="field">
          <label for="user_name">Name</label><br>
          <%= f.text_field :name, id:"user_name" %>
        </div>
        <div class="field">
          <label for="user_introduction">Introduction</label><br>
          <%= f.text_area :introduction, id:"user_introduction" %>
        </div>
        <div class="actions">
          <%= f.submit "Update User" %>
        </div>
      <% end %>
    </div>
  </div>
</div>