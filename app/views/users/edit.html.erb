<div class="container mt-3">
  <div class="row col-lg-5 mx-auto">
    <div>
      <h2>User info</h2>
      
      <%= render 'books/error_explanation', model: @user %>
      
      <%= form_with model: @user do |f| %>
        <div class="form_group">
          <label>Name</label><br>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        
        <div class="form_group">
          <label>Image</label><br>
          <%= f.file_field :profile_image, accept: "image/*", class: "form-control-file" %>
        </div>
        
        <div class="form_group">
          <label>Introduction</label><br>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        
        <div class="form_group"><br>
          <%= f.submit 'Update User', class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>