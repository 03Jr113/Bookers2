<div>
  <h2>User info</h2>
  <%= image_tag user.get_profile_image(100, 100) %>
  <table>
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  
  <div class="row">
    <%= link_to 'Update User', edit_user_path(user) %>
  </div>
  
  <h2>New book</h2>
  <%= form_with model: book, url: '/books', method: :post do |f| %>
    <div class="field">
      <label for="book_title">Title</label><br>
      <%= f.text_field :title, id:"book_title" %>
    </div>
        
    <div class="field">
      <label for="book_opinion">Opinion</label><br>
      <%= f.text_area :body, id:"book_opinion" %>
     </div>
        
     <div class="actions">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
</div>
  