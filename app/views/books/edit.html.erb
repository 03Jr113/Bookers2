<div class="container">
  <div class="row">
    <div>
      <h1>Editing Book</h1>
      
      <%= render 'error_explanation', model: @book %>
      
      <%= form_with model: @book do |f| %>
        <div class=field>
          <label for="book_title">Title</label><br>
          <%= f.text_field :title, id:"book_title" %>
        </div>
        <div class="field">
          <label for="book_opinion">Opinion</label><br>
          <%= f.text_area :body, id:"book_opinion" %>
        </div>
        <div class="actions">
          <%= f.submit 'Update Book' %>
        </div>
      <% end %>
      <%= link_to 'Show', book_path(@book.id) %>
      
      |
      
      <%= link_to 'Back', books_path %>
    </div>
  </div>
</div>