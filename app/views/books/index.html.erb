<% if @book.errors.any? %>
<div class="error_explanation">
  <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div>
  <div>
    <div>
      <h2>New book</h2>
      <%= form_with model: @book, url: '/books', method: :post do |f| %>
        <div class="field">
          <label for="book_title">Title</label><br>
          <%= f.text_field :title, id:"book_title" %>
        </div>
        
        <div class="field">
          <label for="book_opinion">Opinion</label><br>
          <%= f.text_area :body, id:"book_opinion" %>
        </div>
        
        <div class="actions">
          <%= f.submit 'Create Book' %>
        </div>
      <% end %>
    </div>
    
    <div>
      <h2>Books</h2>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= book.title %>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
