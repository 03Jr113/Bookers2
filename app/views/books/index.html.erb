<div>
  <div>
    <div>
      <h2>New book</h2>
      <%= form_with model: @book, url: '/books', method: :post do |f| %>
        <div class="field">
          <label for="book_title">Title</label><br>
          <%= f.text_field :title, id:"book_title" %>
        </div>
        
        <div class="field">
          <label for="book_opinion">Opinion</label><br>
          <%= f.text_area :body, id:"book_opinion" %>
        </div>
        
        <div class="actions">
          <%= f.submit 'create Book' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
