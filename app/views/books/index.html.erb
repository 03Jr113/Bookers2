<div>
  <div>
    <div>
      <h2>New book</h2>
      <%= form_with model: @book, url: '/books', method: :post do |f| %>
        <div class="field">
          <label for="book_title">Title</label><br>
          <%= f.text_field :title, id:"book_title" %>
        </div>
        
        <div class="field">
          <label for="book_opinion">Opinion</label><br>
          <%= f.text_area :body, id:"book_opinion" %>
        </div>
        
        <div class="actions">
          <%= f.submit 'create Book' %>
        </div>
      <% end %>
    </div>
    
    <div>
      <h2>Books</h2>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= book.title %>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
